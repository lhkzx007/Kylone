<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="600dp"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:paddingBottom="20dp"
    android:paddingTop="20dp">

    <FrameLayout
        android:id="@+id/dialog_el"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:padding="10dp">

        <EditText
            android:id="@+id/dialog_et"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:maxLines="1"
            android:inputType="text"
            android:hint="Please input the server IP address ..." />
    </FrameLayout>


    <TextView
        android:id="@+id/dialog_enter"
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/dialog_el"
        android:layout_marginLeft="50dp"
        android:background="@drawable/bg_live_item"
        android:enabled="true"
        android:focusable="true"
        android:gravity="center"
        android:padding="10dp"
        android:text="Enter"
        android:textColor="#FFFFFF"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/dialog_default"
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/dialog_el"
        android:layout_marginRight="50dp"
        android:background="@drawable/bg_live_item"
        android:enabled="true"
        android:focusable="true"
        android:gravity="center"
        android:padding="10dp"
        android:text="Default"
        android:textColor="#FFFFFF"
        android:textSize="20sp" />


</RelativeLayout>