<?xml version="1.0" encoding="utf-8"?>
<com.kylone.view.RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="170px"
    android:layout_height="wrap_content"
    android:background="@drawable/bg_live_item_title"
    android:focusable="true"
    android:padding="5px">

    <com.kylone.view.ImageView
        android:id="@+id/item_icon"
        android:layout_width="20px"
        android:layout_height="20px"
        android:visibility="gone" />

    <com.kylone.view.ImageView
        android:id="@+id/item_image"
        android:scaleType="fitXY"
        android:layout_width="match_parent"
        android:layout_height="240px"
        android:layout_centerHorizontal="true" />

    <com.kylone.view.TextView
        android:id="@+id/item_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/item_image"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="5px"
        android:gravity="center"
        android:maxLines="1"
        android:textColor="#ffffff"
        android:textSize="20px" />
</com.kylone.view.RelativeLayout>