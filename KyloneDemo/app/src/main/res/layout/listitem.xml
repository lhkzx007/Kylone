<?xml version="1.0" encoding="utf-8"?>
<com.kylone.view.LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal" >
    <com.kylone.view.ImageView
        android:layout_width="60dp"
        android:layout_height="60dp"
	android:padding="5dp"
        android:id="@+id/itemicon"/>
    <com.kylone.view.LinearLayout android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <com.kylone.view.TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="5dp"
            android:padding="2dp"
            android:id="@+id/itemtitle"/>
        <com.kylone.view.TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:id="@+id/itemtext"/>
	</com.kylone.view.LinearLayout>
</com.kylone.view.LinearLayout>
