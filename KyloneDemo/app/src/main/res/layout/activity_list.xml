<?xml version="1.0" encoding="utf-8"?>
<com.kylone.view.RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <ImageView
        android:id="@+id/bg_img"
        android:scaleType="fitXY"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />
    <include
        android:id="@+id/activity_title"
        layout="@layout/layout_activity_title" />

    <com.kylone.view.LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/activity_title"
        android:orientation="horizontal">

        <com.kylone.view.RecyclerView
            android:id="@+id/film_list_item"
            android:layout_marginTop="15px"
            android:paddingTop="15px"
            android:paddingRight="15px"
            android:layout_width="180px"
            android:layout_height="match_parent"/>

        <com.kylone.view.RecyclerView
            android:id="@+id/film_list_content"
            android:layout_width="0px"
            android:layout_marginTop="15px"
            android:paddingTop="15px"
            android:padding="10px"
            android:layout_height="match_parent"
            android:layout_weight="1" />
    </com.kylone.view.LinearLayout>

</com.kylone.view.RelativeLayout>