<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/img_welcome"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="fitXY"
        android:src="@mipmap/bg_welcome" />

    <RelativeLayout
        android:id="@+id/layout_warning"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#000000"
        android:visibility="gone">

        <ImageView
            android:layout_marginTop="200dp"
            android:layout_centerHorizontal="true"
            android:id="@+id/img_warning"
            android:layout_width="180dp"
            android:layout_height="158dp"
            android:src="@mipmap/ic_warning" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/img_warning"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="15dp"
            android:text="This device is currently disabledï¼Œ Please contact the provider !"
            android:textColor="#ffffff"
            android:textSize="26sp"
            android:textStyle="bold" />

    </RelativeLayout>

</FrameLayout>